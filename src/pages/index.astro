---
import HomePage from '../components/pages/HomePage.astro';
import type { Language } from '../i18n/translations';
import { languages, defaultLanguage } from '../i18n/translations';

const supportedLanguages = Object.keys(languages) as Language[];
const lang = (Astro.currentLocale && supportedLanguages.includes(Astro.currentLocale as Language)
  ? (Astro.currentLocale as Language)
  : defaultLanguage);
---

<HomePage lang={lang} />
