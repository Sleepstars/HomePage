---
export interface SocialLink {
  name: string;
  url: string;
  // Simple Icons slug, e.g. "github", "telegram", "x"
  icon: string;
  enabled?: boolean;
}

interface Props {
  links: SocialLink[];
}

const { links } = Astro.props;
const enabledLinks = links.filter(link => link.enabled !== false);
---

<div class="flex flex-wrap gap-4 items-center">
  {enabledLinks.map(link => (
    <a
      href={link.url}
      target="_blank"
      rel="noopener noreferrer"
      class="group flex items-center gap-2 text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200"
      aria-label={link.name}
    >
      <span
        class="si w-5 h-5 opacity-90 group-hover:opacity-100 transition-opacity duration-200"
        style={`--si: url('/icons/${link.icon}.svg')`}
        aria-hidden="true"
      />
      <span class="text-sm">{link.name}</span>
    </a>
  ))}
</div>
